<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
         xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form"
         xmlns:i="jelly:fmt" xmlns:p="/lib/hudson/project">
  <f:optionalBlock field="requiredResources" inline="true" title="Confirm resource availability before building" checked="${instance.getResourcesRequired();}">
    <f:entry field="resources" title="${%Required resources}">
      <select name="resources" multiple="multiple" size="5">
        <j:set var="allResources" value="${descriptor.getResourceNames();}"/>
        <j:forEach var="aResource" items="${allResources}" varStatus="loop">
          <j:choose>
            <j:when test="${instance.resources.contains(aResource)}">
              <option value="${aResource}" selected="selected">${aResource}</option>
            </j:when>
            <j:otherwise>
              <option value="${aResource}">${aResource}</option>
            </j:otherwise>
          </j:choose>
        </j:forEach>
      </select>
    </f:entry>
      <f:entry>
          <f:checkbox field="skipBlockage" title="Skip Blockage?"/>
      </f:entry>
  </f:optionalBlock>
</j:jelly>
